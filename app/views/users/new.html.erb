<h1>Users#new</h1>

<form action="<%= users_path %>" accept-charset="UTF-8" method="post" id="user-form">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <div class="form-control-group">
    <label for="username" class="input-label">
      Username: <input type="text" id="username" name="user[username]">
    </label>
  </div>

  <div class="form-control-group">
    <label for="email" class="input-label">
      Email: <input type="email" id="email" name="user[email]">
    </label>
  </div>

  <div class="form-control-group">
    <label for="password" class="input-label">
      Password: <input type="password" id="password" name="user[password]">
    </label>
  </div>

  <input type="submit" value="Create account">
</form>
